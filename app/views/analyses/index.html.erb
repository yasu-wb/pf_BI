<h1>分析シート</h1>
  <div class="analysis-cards">
    <% @lists.each do |list| %>
      <% if list.analyses.blank? %>
        <% list.item_lists.each do |item_list| %>
          <ul class="analysis-card">
            <li class="incode">
              <span>INコード</span>
              <%= item_list.item.incode %>
            </li>
            <li class="item-name">
                <%= item_list.item.name %>
            </li>
            <%= form_with(model: @analysis, local: true) do |f| %>
              
              <li class="tank-no">
                <%= f.label :tank_no, "タンクNo." %>
                <%= f.text_field :tank_no, class:"analysis-input" %>
              </li>
              <li class="density">
                <%= f.label :density, "比重" %>
                <%= f.text_field :density, class:"analysis-input" %>
              </li>
              <li class="alcohol">
                <%= f.label :alcohol, "Alcohol" %>
                <%= f.text_field :alcohol, class:"analysis-input" %>
              </li>
              <li class="extract">
                <%= f.label :extract, "エキス" %>
                <%= f.text_field :extract, class:"analysis-input" %>
              </li>
              <li class="acid_degree">
                <%= f.label :acid_degree, "酸" %>
                <%= f.text_field :acid_degree, class:"analysis-input" %>
              </li>
              <li class="amino_acid">
                <%= f.label :amino_acid, "アミノ酸" %>
                <%= f.text_field :amino_acid, class:"analysis-input" %>
              </li>
              <li class=color>
                <%= f.label :color, "OD" %>
                <%= f.text_field :color, class:"analysis-input" %>
              </li>
              <li class="nacl">
                <%= f.label :nacl, "塩分" %>
                <%= f.text_field :nacl, class:"analysis-input" %>
              </li>
              <li class="turbidity">
                <%= f.label :turbidity, "濁度" %>
                <%= f.text_field :turbidity, class:"analysis-input" %>
              </li>
              <div class="sulfurous_acid">
                <span>亜硫酸</span>
                <div class="free_sulfurous_acid">
                  <%= f.label :free_sulfurous_acid, "Free" %>
                  <%= f.text_field :free_sulfurous_acid, class:"analysis-input" %>
                </div>
                <div class="total_sulfurous_acid">
                  <%= f.label :total_sulfurous_acid, "Total" %>
                  <%= f.text_field :total_sulfurous_acid, class:"analysis-input" %>
                </div>
              </div>
              <div class="comment">
                <%= f.label :comment, "備考" %>
                <%= f.text_area :comment, class:"comment-input" %>
              </div>
              <div class="foreign_key_id">
                <%= f.hidden_field :item_id, value: item_list.item.id %>
                <%= f.hidden_field :list_id, value: item_list.list.id %>
              </div>
              <div class="btn-contents">
                <%= f.submit "入力" , class:"insert-btn" %>
              </div>
              <%= render 'layouts/error_messages', model: f.object %> 
            <% end %>
          </ul>
        <% end %>
      <% else %>
        <% list.analyses.each do |analysis| %>
          <ul class="analysis-card">
            <li class="incode">
              <span>INコード</span>
                <%= analysis.item.incode %>
            </li>
            <li class="item-name">
              <%= analysis.item.name %>
            </li>
            <li class="tank-no">
              <span>タンクNo.</span>
              <%= analysis.tank_no %>
            </li>
            <li class="density">
              <span>比重</span>
              <%= analysis.density %>
            </li>
            <li class="alcohol">
              <span>Alcohol</span>
              <%= analysis.alcohol %>
            </li>
            <li class="extract">
              <span>エキス</span>
              <%= analysis.extract %>
            </li>
            <li class="acid_degree">
              <span>酸</span>
              <%= analysis.acid_degree %>
            </li>
            <li class="amino_acid">
              <span>アミノ酸</span>
              <%= analysis.amino_acid %>
            </li>
            <li class="color">
              <span>OD430nm</span>
              <%= analysis.color %>
            </li>
            <li class="nacl">
              <span>塩分</span>
              <%= analysis.nacl %>
            </li>
            <li class="turbidity">
              <span>濁度</span>
              <%= analysis.turbidity %>
            </li>
            <div class="sulfurous_acid">
              <span>亜硫酸</span>
              <div class="free_sulfurous_acid">
                <span>Free</span>
                <%= analysis.free_sulfurous_acid %>
              </div>
              <div class="total_sulfurous_acid">
                <span>Total</span>
                <%= analysis.total_sulfurous_acid %>
              </div>
            </div>
            <div class="comment">
              <span>備考</span>
              <%= analysis.comment %>
            </div>
          </ul>
        <% end %>
      <% end %>
    <% end %>
  </div>
