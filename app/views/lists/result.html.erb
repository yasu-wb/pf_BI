<h1>検索</h1>
  
  <%= search_form_for @l, url: result_lists_path do |f| %>
    <%= f.label :incode_eq, 'INコード' %><br>
    <%= f.search_field :incode_eq %>
    <%= f.submit '検索' %>

    <h2>検索結果</h2>
    <% if @results.length !=0 %>
      <% @results.each do |result| %>
        <% if result.analyses.present? %>
          <div class="item-list">
            <% result.analyses.each do |analysis| %>
              <%= link_to  analysis_path(analysis.id) do %>
                <%= analysis.item.incode %>
                <%= analysis.item.sub_category.name %>
                <%= analysis.item.name %>
                <%= analysis.list.date %>
              <% end %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <h3>該当する製品はありません</h3>
    <% end %>
  <br>

  <% end %>